<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:background="@drawable/touch_selector">

    <ImageView
        android:id="@+id/imgAlbum"
        android:layout_margin="@dimen/abc_dialog_padding_material"
        android:layout_width="@android:dimen/notification_large_icon_width"
        android:layout_height="@android:dimen/notification_large_icon_height"
        android:layout_gravity="center_vertical|start"
        android:contentDescription="@string/album_image_description"
        tools:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/txtTrack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/abc_list_item_padding_horizontal_material"
            android:layout_marginLeft="@dimen/abc_list_item_padding_horizontal_material"
            style="@style/listTextLarge"
            tools:text="Track Name" />
        <TextView
            android:id="@+id/txtAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/abc_list_item_padding_horizontal_material"
            android:layout_marginLeft="@dimen/abc_list_item_padding_horizontal_material"
            style="@style/listTextSmall"
            tools:text="Album Name" />

    </LinearLayout>

</LinearLayout>