<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
    </style>

    <!-- Theme for activity being a dialog (with no title) on large devices. -->
    <style name="AppDialogWhenLarge" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
    </style>


    <style name="listTextLarge">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>
    <style name="listTextSmall">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AppListStyle">
        <!-- TODO: Remove - single choice moe is only for tablets -->
        <item name="android:choiceMode">singleChoice</item>
    </style>

</resources>
